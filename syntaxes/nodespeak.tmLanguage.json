{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Nodespeak",
	"patterns": [
		{
			"name": "comment.line.nodespeak",
			"match": "//.*$"
		},
		{
			"name": "comment.block.nodespeak",
			"begin": "/\\*",
			"end": "\\*/"
		},
		{
			"name": "constant.numeric.nodespeak",
			"match": "\\b[0-9]+(\\.[0-9]+)?(e[+-]?[0-9]+)?\\b"
		},
		{
			"name": "keyword.control.nodespeak",
			"match": "\\b(if|else|while|for|to|return|continue|break|inline|macro|input|output|static|assert|include)\\b"
		},
		{
			"name": "keyword.operator.nodespeak",
			"match": "(\\+|-|\\*|/|%|\\*\\*|<|>|<=|>=|!=|==|:|\\?)"
		},
		{
			"name": "keyword.operator.nodespeak",
			"match": "\\b(and|or|xor|nand|nor|xnor|band|bor|bxor|bnand|bnor|bxnor)\\b"
		},
		{
			"name": "constant.nodespeak",
			"match": "\\b[A-Z][A-Z0-9_]*\\b"
		},
		{
			"name": "entity.name.function.nodespeak",
			"match": "\\b[A-Z][A-Za-z0-9]*\\b"
		},
		{
			"name": "variable.other.nodespeak",
			"match": "\\b[a-z][a-z0-9_]*\\b"
		}
	],
	"repository": {},
	"scopeName": "source.nodespeak"
}